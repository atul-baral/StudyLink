@model IEnumerable<StudyLink.Domain.Entities.QuestionType>

@{
    ViewData["Title"] = "Question Types";
}

<style>
    .card {
        box-shadow: 0px 0rem 1rem 0px rgba(0, 0, 0, 0.175) !important;
        border: 1px solid #ddd !important;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .content-above h4 {
        font-size: 1.5rem;
    }
</style>

<div class="container my-5">
    <div class="content-above text-center mb-5">
        <h4 class="display-4 font-weight-light">Select a Question Type</h4>
        <p class="lead text-muted">Click on any card below to navigate to the corresponding details.</p>
    </div>

    <div class="row justify-content-center">
        @foreach (var type in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <a asp-action="Index" asp-controller="Answer" asp-route-id="@type.QuestionTypeId" class="card shadow-lg border-0 rounded-lg bg-white text-decoration-none d-flex flex-column">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title text-primary mb-3">@type.TypeName</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
