@model StudyLink.Domain.Entities.Subject

@{
    ViewData["Title"] = "Add Subject";
}

<h2>Edit Subject</h2>

<form asp-area="Admin" asp-area="SubjectManage" asp-action="Edit" id="form-container" method="post">
    <input type="hidden" name="subjectId" value="@Model.SubjectId" />

    <div id="form"></div>
</form>
@section Scripts {
    <script>
        $("#form").dxForm({
            id: "form",
            labelLocation: "top",
            showColonAfterLabel: false,
            formData: @Html.Raw(Json.Serialize(Model)),
            items: [{
                itemType: "group",
                caption: "Subject Information",
                colCount: 2,
                items: [
                    { dataField: "subjectName", isRequired: true },
                    { dataField: "subjectCode", isRequired: true }
                ]
            }, {
                itemType: "button",
                horizontalAlignment: "center",
                buttonOptions: {
                    text: "Submit",
                    useSubmitBehavior: true
                }
            }]
        });
    </script>
}

