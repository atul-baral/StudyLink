<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyLink</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/StudyLink.Presentation.styles.css" asp-append-version="true" />
    <link href="https://cdn3.devexpress.com/jslib/24.2.3/css/dx.light.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* HEADER */
        .header {
            background-color: #222;
            color: white;
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
        }

        /* MAIN CONTAINER */
        .main-container {
            display: flex;
            flex-grow: 1;
            min-height: calc(100vh - 50px); 
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            background-color: #333;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 70px; 
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    padding: 15px;
                    text-align: left;
                    padding-left: 20px;
                }

                    .sidebar ul li:hover {
                        background-color: #575757;
                    }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        display: block;
                    }

        /* CONTENT */
        .content {
            flex-grow: 1;
            padding: 20px;
            margin-left: 250px; 
            margin-top: 60px;
        }

        /* FOOTER */
        .footer {
            background-color: #222;
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 14px;
            margin-top: auto;
        }
    </style>
</head>
<body>

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudyLink</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="main-container">

        <div class="sidebar">
            <h2>Dashboard</h2>
            <ul>
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="Admin" asp-controller="StudentManage" asp-action="Index">Student</a></li>
                <li><a asp-area="Admin" asp-controller="TeacherManage" asp-action="Index">Teacher</a></li>
                <li><a asp-area="Admin" asp-controller="SubjectManage" asp-action="Index">Subject</a></li>
            </ul>
        </div>

        <!-- MAIN CONTENT -->
        <div class="content">
            <div class="notification-container">
                <partial name="_Notification" />
            </div>
            @RenderBody()
        </div>


    </div>

    <!-- FOOTER -->
@*     <footer class="footer">
        © 2024 Your Company | All Rights Reserved
    </footer> *@

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/24.2.3/js/dx.all.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
