@model StudyLink.Domain.Entities.QuestionType

@{
    ViewData["Title"] = "Add Question Type";
}

<h2>Edit QuestionType</h2>

<form asp-area="Admin" asp-area="QuestionTypeManage" asp-action="Edit" id="form-container" method="post">
    <input type="hidden" name="questionTypeId" value="@Model.QuestionTypeId" />

    <div id="form"></div>
</form>
@section Scripts {
    <script>
        $("#form").dxForm({
            id: "form",
            labelLocation: "top",
            showColonAfterLabel: false,
            formData: @Html.Raw(Json.Serialize(Model)),
            items: [{
                itemType: "group",
                caption: "Question Type Information",
                colCount: 2,
                items: [
                    { dataField: "typeName", isRequired: true },
                    { dataField: "fullMarks", isRequired: true },
                    { dataField: "passMarks", isRequired: true },
                    {
                        dataField: "duration",
                        label: { text: "Duration (in minutes)" },
                        editorType: "dxNumberBox",
                        editorOptions: {
                            min: 0,
                            showSpinButtons: true,
                            format: "#0.00",
                            step: 0.01
                        },
                        isRequired: true
                    },
                    {
                        dataField: "publishDate",
                        label: { text: "Publish Date" },
                        editorType: "dxDateBox",
                        editorOptions: {
                            type: "datetime",
                            displayFormat: "yyyy-MM-dd HH:mm",
                            showClearButton: true
                        },
                        isRequired: true
                    },
                    {
                        dataField: "endDate",
                        label: { text: "End Date" },
                        editorType: "dxDateBox",
                        editorOptions: {
                            type: "datetime",
                            displayFormat: "yyyy-MM-dd HH:mm",
                            showClearButton: true
                        },
                        isRequired: true
                    }
                ]
            }, {
                itemType: "button",
                horizontalAlignment: "center",
                buttonOptions: {
                    text: "Submit",
                    useSubmitBehavior: true
                }
            }]
        });
    </script>
}

